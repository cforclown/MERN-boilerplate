{
  "include": [
    "src",
    "jest.config.js",
    "src/test",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".vscode"
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "DOM"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": [
      "src"
    ],
    "outDir": "build",
    "declaration": true,
    "strict": true
  }
}
